Package: SEQuential
Type: Package
Title: Target Trial Emulation
Version: 0.1.0
Authors@R: c(person(given = "Ryan",
                    family = "O\'Dea",
                    role = c("aut", "cre"),
                    email = "ryanodea@hsph.harvard.edu"),
